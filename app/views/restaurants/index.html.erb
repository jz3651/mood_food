<div class="restaurant-index">
  <div class="restaurants-container">
    <div class="ya-muma">
      <% if params[:query].present?%>
        <h2><%=params[:query][1].capitalize%> Restaurants</h2>
      <% else %>
        <h2>Your personalised recommendations, Seamus</h2>
      <% end%>

      <div class = "list-map-buttons">
        <button type="button" id= "list-btn">List</button>
        <button type="button" id= "map-btn">Map</button>
      </div>
    </div>
  </div>

    <div id="js-list">

      <div class="restaurants">
        <div class="restaurant-wrapper">
              <% cache @restaurants do %>
                  <%= render @restaurants %>
              <% end %>
        </div>
      </div>
    </div>

    <div id="js-map" class="d-none">
      <div id="map"
        style="width: 100%; height: 500px;"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="pk.eyJ1Ijoibmlja3N5cGFudHMiLCJhIjoiY2tyaDdnMm51NXMzdzJvcXVweHNqcGY5cyJ9.20i0aGnIAdLyDqquICxekQ">
      </div>
    </div>

  </div>

</div>
