<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to "#", class: "navbar-brand" do %>
    <%= image_tag "https://res.cloudinary.com/shamo/image/upload/v1626777768/Mood_Food_stf3we.png"%>
    <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

      <div class="search-box">
      <%= form_tag restaurants_path, method: :get do %>
        <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "Find a restaurant"
        %>
        <div class= "search-buttons-wrapper">
          <%= submit_tag "Search", class: "btn btn-primary" %>
          <% end %>
          <div class="filter-button"></div>
          <div class = "list-map-buttons">
            <button type="button" id= "list-btn" class="btn btn-primary">List</button>
            <button type="button" id= "map-btn" class="btn btn-primary">Map</button>
          </div>
      </div>
    </div>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item <%= 'active' if controller_name == 'pages' && action_name == 'home' %>">
          <%= link_to "Home", root_path, class: "nav-link" %>
        </li>
        <li class="nav-item <%= 'active' if controller_name == 'restaurants' && action_name == 'index' %>">
          <%= link_to "All", restaurants_path, class: "nav-link" %>
        </li>
        <li class="nav-item <%= 'active' if controller_name == 'bookmarks' && action_name == 'index' %>">
          <%= link_to "Saved", bookmarks_path, class: "nav-link" %>
        </li>
        <li class="nav-item dropdown">
          <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Log out", destroy_user_session_path, :method => :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
