<div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
  Bookmarks
</div>
<div class ="bookmark-container">

    <% @bookmarks.any? %>
        <% @bookmarks.each do |bookmark|%>
            <div class="bookmark-card">
                <img class= "bookmark-img" src="https://images.unsplash.com/photo-1476718406336-bb5a9690ee2a?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=668&q=80">
                <h3><%= bookmark.restaurant.name %></h3>
                <span>$<%= bookmark.restaurant.price%></span>
                <span><%= bookmark.restaurant.location%></span>
            </div>
        <% end %>

</div>
